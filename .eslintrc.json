{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-param-reassign": "off",
        "linebreak-style": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "no-continue": "off",
        "no-console": "off"
    }
}